# 屏幕监控系统环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ================================
# 数据库配置 (MySQL)
# ================================
MYSQL_ROOT_PASSWORD=rootPassword123
MYSQL_DATABASE=screen_monitoring
MYSQL_USER=monitor_user
MYSQL_PASSWORD=monitorPass123
MYSQL_PORT=3306

# ================================
# 缓存配置 (Redis)
# ================================
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# 对象存储配置 (MinIO)
# ================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9090
MINIO_DEFAULT_BUCKETS=monitoring-screenshots

# ================================
# 应用服务配置
# ================================
# 后端服务
BACKEND_PORT=3001
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 前端服务
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_BASE_URL=ws://localhost:3001

# Nginx反向代理
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ================================
# 开发环境配置
# ================================
# 开发环境下的端口配置，避免与生产环境冲突
DEV_MYSQL_PORT=13306
DEV_REDIS_PORT=16379
DEV_MINIO_API_PORT=19000
DEV_MINIO_CONSOLE_PORT=19090
DEV_ADMINER_PORT=18080
DEV_REDIS_GUI_PORT=18081

# ================================
# 安全配置
# ================================
# 客户端API密钥
CLIENT_API_KEY=your-client-api-key
WEBHOOK_SECRET=your-webhook-secret

# 文件上传配置
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=100MB