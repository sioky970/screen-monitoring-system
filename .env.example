# 屏幕监控系统环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ================================
# 数据库配置 (MySQL)
# ================================
MYSQL_ROOT_PASSWORD=rootPassword123
MYSQL_DATABASE=screen_monitoring
MYSQL_USER=monitor_user
MYSQL_PASSWORD=monitorPass123
MYSQL_PORT=47821

# ================================
# 缓存配置 (Redis)
# ================================
REDIS_PORT=47822
REDIS_PASSWORD=

# ================================
# 对象存储配置 (MinIO)
# ================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=47823
MINIO_CONSOLE_PORT=47824
MINIO_DEFAULT_BUCKETS=monitoring-screenshots

# ================================
# 应用服务配置
# ================================
# 后端服务
BACKEND_PORT=47831
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 前端服务
FRONTEND_PORT=47830
VITE_API_BASE_URL=http://localhost:47831/api
VITE_WS_BASE_URL=ws://localhost:47831

# Nginx反向代理
NGINX_HTTP_PORT=47832
NGINX_HTTPS_PORT=47833

# ================================
# 开发环境配置
# ================================
# 开发环境下的端口配置，使用冷门端口避免冲突
DEV_BACKEND_PORT=47828
DEV_FRONTEND_PORT=47827
DEV_MYSQL_PORT=47821
DEV_REDIS_PORT=47822
DEV_MINIO_API_PORT=47823
DEV_MINIO_CONSOLE_PORT=47824
DEV_ADMINER_PORT=47825
DEV_REDIS_GUI_PORT=47826

# 开发环境API配置
DEV_VITE_API_BASE_URL=http://localhost:47828/api
DEV_VITE_WS_BASE_URL=ws://localhost:47828

# ================================
# 安全配置
# ================================
# 客户端API密钥
CLIENT_API_KEY=your-client-api-key
WEBHOOK_SECRET=your-webhook-secret

# 文件上传配置
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=100MB